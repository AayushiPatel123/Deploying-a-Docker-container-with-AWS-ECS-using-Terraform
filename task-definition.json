{
    "family": "sonarqube-task",
    "networkMode": "awsvpc",
    "executionRoleArn": "arn:aws:iam::<your-account-id>:role/ecsTaskExecutionRole",
    "taskRoleArn": "arn:aws:iam::<your-account-id>:role/ecsTaskRole",
    "requiresCompatibilities": [
        "FARGATE"
    ],
    "cpu": "1024",
    "memory": "2048",
    "containerDefinitions": [
        {
            "name": "sonarqube",
            "image": "992382637396.dkr.ecr.us-east-1.amazonaws.com/app-repo:latest",
            "portMappings": [
                {
                    "containerPort": 9000,
                    "hostPort": 9000,
                    "protocol": "tcp"
                }
            ],
            "essential": true,
            "environment": [],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "/ecs/sonarqube",
                    "awslogs-region": "us-east-1",
                    "awslogs-stream-prefix": "ecs"
                }
            }
        }
    ],
    "networkConfiguration": {
        "awsvpcConfiguration": {
            "subnets": [
                "subnet-0123456789abcdef0" // replace with your subnet ID
            ],
            "securityGroups": [
                "sg-0123456789abcdef0" // replace with your security group ID
            ],
            "assignPublicIp": "ENABLED"
        }
    }
}
